# Environment
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/product_checker_dev
DATABASE_ECHO=true
DATABASE_POOL_SIZE=10

# Security (Generate: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your-dev-secret-key-change-in-production

# API Configuration
API_PREFIX=/api/v1
DOCS_URL=/docs


GROQ_API_KEY=
CEREBRAS_API_KEY=

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000

# FDA Scraper
FDA_BASE_URL=https://verification.fda.gov.ph
FDA_TIMEOUT=30
FDA_MAX_PAGES_PER_RUN=10
FDA_RATE_LIMIT_DELAY=1.0

# Fuzzy Matching
FUZZY_MATCH_THRESHOLD=80
FUZZY_MATCH_LIMIT=5

# Caching
CACHE_ENABLED=true
CACHE_TTL_MINUTES=30
CACHE_MAX_SIZE=1000

# Logging (Loguru)
LOG_LEVEL=DEBUG
LOG_LEVEL_CONSOLE=  # Optional: Override console log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL_FILE=     # Optional: Override file log level
LOG_FILE=logs/app.log  # Optional: Enable file logging with rotation
LOG_FORMAT="<green>{time:YYYY-MM-DD HH:mm:ss}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan>:<cyan>{line}</cyan> - <level>{message}</level>"
LOG_ROTATION=500 MB  # Rotation trigger: size (e.g., '500 MB') or time (e.g., '1 week', '00:00')
LOG_RETENTION=10 days  # Log retention period (e.g., '10 days', '1 month')
LOG_COMPRESSION=zip  # Compression format: 'zip', 'gz', 'tar.gz', or empty for none
LOG_SERIALIZE=false  # Serialize logs to JSON (useful for log aggregation)
LOG_BACKTRACE=true  # Enable full exception traceback
LOG_DIAGNOSE=false  # Enable variable values in traces (disable in production)
